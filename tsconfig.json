{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext", // back to the classic pair
    "moduleResolution": "Node",
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitAny": true,
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["packages/**/*"],
  "exclude": ["packages/web"] // ðŸ‘ˆ keeps JSX & alias magic out of root build
}
